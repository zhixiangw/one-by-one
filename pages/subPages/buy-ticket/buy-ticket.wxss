.container {
  position: relative;
  width: 100vw;
  min-height: 100vh;
  background: #f5f5f5;
  color: #666;
}

.section {
  margin-bottom: 20rpx;
  font-size: 28rpx;
  padding: 30rpx;
  padding-right: 0;
  background: #fff;
}
.section.section-bottom{
  padding-bottom: 230rpx;
  margin: 0;
}

.section-title {
  color: #333;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #f0f0f0;
  font-size: 32rpx;
  line-height: 1em;
}

.section-content {
  color: #999;
  font-size: 28rpx;
  line-height: 1.8em;
  padding-top: 20rpx;
  padding-right: 30rpx;
}

.stress{
  color: #f03d37;
}

.movie-box{
  display: flex;
  align-items: center;
  width: 100%;
  height: 100%;
}
.movie-box .movie-poster{
  width: 214rpx;
  min-width: 214rpx;
  height: 300rpx;
  background-size: cover;
  background-repeat: no-repeat;
}
.movie-info {
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
  height: 300rpx;
  padding-top: 20rpx;
  padding-right: 30rpx;
  line-height: 1.5em;
  font-size: 24rpx;
}

.movie-name {
  color: #333;
  font-size: 36rpx;
}

.watch-time {
  color: #f03d37;
}
.info-box{
  flex: 1;
}
.seat-box{
  display: flex;
  justify-content: space-between;
  padding-right: 30rpx;
  padding-top: 30rpx;
}
.server {
  font-size: 26rpx;
  color: #999;
}

.price-box .vip-price, .price-box .vip-price .price-num{
  font-size: 36rpx;
  font-weight: bold;
  color: #f03d37;
}

.price-box .price-num {
  font-size: 24rpx;
}

.footer{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background: #fff;
  border-top: 1px solid #f0f0f0;
}
.payment{
  padding: 20rpx 30rpx;
  text-align: right;
  font-size: 32rpx;
}
.footer .price-num{
  color: #f03d37;
  font-size: 36rpx;
}
.footer .yuan{
  font-size: 20rpx;
}
.payment-btn{
  height: 2.5em;
  line-height: 2.5em;
  background: #f90;
  margin: 0 30rpx 20rpx;
  color: #fff;
  text-align: center;
  font-size: 34rpx;
  border-radius: 8rpx;
}

.coupon-section {
  margin-bottom: 0;
}

.coupon-section .section-title {
  padding: 20rpx 50rpx 20rpx 0;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
  position: relative;
  font-size: 30rpx;
}

.coupon-section .section-title .title-desc {
  flex: 1;
  color: #999;
  font-size: 28rpx;
  text-align: right;
}

.coupon-section .section-title::after {
  position: absolute;
  right: 30rpx;
  top: 50%;
  content: "";
  width: 16rpx;
  height: 16rpx;
  border-left: 1px solid #ccc;
  border-top: 1px solid #ccc;
  transform: translateY(-50%) rotate(135deg);
}

.popup-daliog {
  background-color: #f4f4f4;
  padding: 0 20rpx;
}

.popup-daliog .weui-half-screen-dialog__hd__side {
  left: 20rpx;
}

.popup-daliog .weui-half-screen-dialog__bd {
  padding: 0;
  height: 0;
}
.popup-daliog .weui-half-screen-dialog__ft {
  padding-right: 0;
  padding-left: 0;
}
.popup-daliog .pop-header{
  display: flex;
  font-size: 28rpx;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.popup-daliog .pop-header .pop-title{
  color: #999;
}
.popup-daliog .pop-header .operator{
  color: #f03d37;
}

.card-item {
  display: flex;
  align-items: center;
}

.card-item .popup-content {
  flex: 1;
  margin-left: 10rpx;
}

.coupon-item {
  display: flex;
  width: 100%;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 25rpx;
  background-color: #fff;
}

.left {
  width: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #FF5E51;
  color: #fff;
}

.dot {
  transform: translate3d(-50%, 0, 0);
  border-right: 6rpx dotted #FF5E51;
}

.right {
  padding: 10rpx 20rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  text-align: left;
}

.title {
  font-size: 34rpx;
  border-bottom: 1rpx solid #FFEB574B;
  line-height: 90rpx;
}

.desc {
  font-size: 28rpx;
  line-height: 70rpx;
}

.sub-title {
  color: #333;
  line-height: 70rpx;
  font-size: 28rpx;
}

.content {
  color: #666;
  line-height: 45rpx;
  font-size: 24rpx;
}

.valid-date {
  border-top: 1rpx solid #f4f4f4;
  text-align: right;
  color: #999;
  font-size: 24rpx;
  padding-top: 10rpx;
  margin-top: 10rpx;
}