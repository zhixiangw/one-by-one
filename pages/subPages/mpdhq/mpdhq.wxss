page {
  background-color: #f4f4f4;
}

.coupon-list {
  padding: 20rpx;
}

.coupon-item {
  display: flex;
  width: 100%;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 25rpx;
  background-color: #fff;
}

.left {
  width: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #FF5E51;
  color: #fff;
}

.dot {
  transform: translate3d(-50%, 0, 0);
  border-right: 6rpx dotted #FF5E51;
}

.right {
  padding: 10rpx 20rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.title {
  font-size: 38rpx;
  border-bottom: 1rpx solid #FFEB574B;
  line-height: 90rpx;
}

.desc {
  font-size: 28rpx;
  line-height: 70rpx;
}

.sub-title {
  color: #333;
  line-height: 70rpx;
  font-size: 32rpx;
}

.content {
  color: #666;
  line-height: 45rpx;
  font-size: 28rpx;
}

.valid-date {
  border-top: 1rpx solid #f4f4f4;
  text-align: right;
  color: #999;
  font-size: 28rpx;
  padding-top: 10rpx;
  margin-top: 10rpx;
}